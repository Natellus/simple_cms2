<div class="Sections index">
  <h2>Sections</h2>
  <%= link_to("Add new Section", new_section_path, :class => 'action new') %>
  <table class="listing" summary="Page list">
    <tr class="header">
      <th>#</th>
      <th>Name</th>
      <th>Page ID</th>
      <th>Visible </th>
      <th>Actions</th>
    </tr>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.position %></td>
        <td><%= section.name %></td>
        <td><%= section.page_id %></td>
        <td class="center"> <%= status_tag(section.visible) %> </td>
        <td class="actions">
          <%= link_to("Show", section_path(section), :class => 'action now') %>
          <%= link_to("Edit", edit_section_path(section), :class => 'action now') %>
          <%= link_to("Delete", delete_section_path(section), :class => 'action now') %>
        </td>
      </tr>
    <% end %>
  </table>
</div>